[Unit]
Description=docker-compose
Requires=docker.service
After=docker.service

[Service]
WorkingDirectory=/opt/docker-compose/
Restart=always
User=tim
Group=docker
# Shutdown container (if running) when unit is stopped
ExecStartPre=/usr/bin/docker-compose -f /opt/docker-compose/docker-compose.yml down -v
# Start container when unit is started
ExecStart=/usr/bin/docker-compose -f /opt/docker-compose/docker-compose.yml up -d
# Stop container when unit is stopped
ExecStop=/usr/bin/docker-compose -f /opt/docker-compose/docker-compose.yml down -v

[Install]
WantedBy=multi-user.target
